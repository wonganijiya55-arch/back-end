# Server Configuration
port=5000

# JWT Secret Key for authentication
JWT_SECRET_KEY=your_secret_key_here

# Database Configuration
# Internal URL for Render internal connections (used when RENDER=true)
DATABASE_URL_INTERNAL=postgresql://username:password@host-internal/database_name

# External URL for production/remote connections
DATABASE_URL_EXTERNAL=postgresql://username:password@host-external.frankfurt-postgres.render.com/database_name

# Fallback URL (used for local development or when other URLs are not set)
DATABASE_URL=postgresql://username:password@host-internal/database_name

# SSL mode required by Render
PGSSLMODE=require

# Flask Environment (optional)
FLASK_ENV=development

# Email Configuration (for password reset functionality)
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password_or_app_password
